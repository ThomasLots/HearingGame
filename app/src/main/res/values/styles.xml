<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textViewStyle">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="ButtonViewStyle" parent="@android:style/Widget.Button">
        <item name="android:textAppearanceButton">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Dialog">

    </style>

    <style name="MyCustomTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>

</resources>
